@model Publicaciones.Web.Models.Responses.Sale.SaleViewResult

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Sale</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="storeID" class="control-label">Store ID</label>
                <input asp-for="storeID" class="form-control" />
                <span asp-validation-for="storeID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ordNum" class="control-label">Order Number</label>
                <input asp-for="ordNum" class="form-control" />
                <span asp-validation-for="ordNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="titleID" class="control-label">Title ID</label>
                <input asp-for="titleID" class="form-control" />
                <span asp-validation-for="titleID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Order Date</label>
                <input asp-for="ordDate" class="form-control" />
                <span asp-validation-for="ordDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Payterms</label>
                <input asp-for="payterms" class="form-control" />
                <span asp-validation-for="payterms" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
